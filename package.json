{
  "name": "greenhouse-iot-backend",
  "version": "1.0.0",
  "description": "Greenhouse IoT Backend System with MQTT Integration",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:sensor": "jest tests/sensor.test.js",
    "test:device": "jest tests/device.test.js",
    "test:status": "jest tests/status.test.js",
    "test:single": "jest --testNamePattern",
    "setup:mysql": "node scripts/setup-mysql.js",
    "db:reset": "node scripts/reset-database.js",
    "db:seed": "node scripts/seed-database.js"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 10000,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "mqtt": "^5.0.0",
    "mysql2": "^3.15.3",
    "sequelize": "^6.32.1",
    "sqlite3": "^5.1.6",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.4"
  }
}
